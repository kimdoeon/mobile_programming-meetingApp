<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

	<ViewFlipper android:id="@+id/password_flipper" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" >
		<EditText android:id="@+id/password" android:layout_height="wrap_content" android:inputType="phone" android:maxLength="15" android:layout_width="200dip" android:layout_gravity="center_horizontal" android:textSize="50dip" android:password="true"/> 
		<EditText android:id="@+id/password_confirm" android:layout_height="wrap_content" android:inputType="phone" android:maxLength="15" android:layout_width="200dip" android:layout_gravity="center_horizontal" android:textSize="50dip" android:password="true"/>
	</ViewFlipper>    
</LinearLayout>
